@using NHibernate.CMS.Model
@using NHibernate.CMS.MVC.Common;
@model sys_Department
@{
    ViewBag.Title = "编辑";
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section MainContent{
 <div class="row show-grid">
  
  
      <div class="form-group">
             <div class="col-sm-2"><label for="form-field-2" class="control-label">部门名称</label></div>
              <div class="col-sm-9">
                 @Html.TextBoxFor(m => m.DeparName, new {  @class = "form-control",datatype="*", errormsg="名称不能为空！" })
                <span class="Validform_checktip">*填写信息</span>
                   
                 </div>
            
          </div>    
     <div class="form-group">
            <div class="col-sm-2"> <label for="form-field-3" class="control-label">上级部门</label></div>
             <div class="col-sm-9">
                 <div class="rule-single-select checkbox-higth34">
                      @*@Html.DropDownListFor(m => m.parentID,ViewData["HourList"] as List<SelectListItem>)*@
                     @Html.DropDownList("ParentIds")
                     
                     </div>
                
                 <span class="Validform_checktip">选择上级部门</span>
              </div>  
         </div> 
        
     <div class="form-group">
            <div class="col-sm-2"> <label for="form-field-3" class="control-label">排序号</label></div>
             <div class="col-sm-9">
                 @Html.TextBoxFor(m => m.sort, new {  @class = "form-control",datatype="n", errormsg="只能为数字！"})
                 <span class="Validform_checktip">*填写信息</span>
              </div>  
         </div> 
     

      
 </div>
    }