@using NHibernate.CMS.MVC;
@{
    Layout = null;
}
 
 <html xmlns="http://www.w3.org/1999/xhtml">
<head lang="zh-cn">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>管理员登录</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- basic styles -->
		<link href="@Url.StaticFile("~/assets/css/bootstrap.min.css")" rel="stylesheet" />
		<link rel="stylesheet" href="@Url.StaticFile("~/assets/css/font-awesome.min.css")" />
		<!--[if IE 7]>
		  <link rel="stylesheet" href="@Url.StaticFile("~/assets/css/font-awesome-ie7.min.css")" />
		<![endif]--> 
		<link rel="stylesheet" href="@Url.StaticFile("~/assets/css/ace.min.css")" />
		<link rel="stylesheet" href="@Url.StaticFile("~/assets/css/ace-rtl.min.css")" />
		<!--[if lte IE 8]>
		  <link rel="stylesheet" href="@Url.StaticFile("~/assets/css/ace-ie.min.css")" />
		<![endif]--> 
		<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
		<script src="@Url.StaticFile("~/assets/js/html5shiv.js")"></script>
		<script src="@Url.StaticFile("~/assets/js/respond.min.js")"></script>
		<![endif]-->
      
</head>

  <body class="login-layout">
		<div class="main-container">
			<div class="main-content">
				<div class="row">
					<div class="col-sm-10 col-sm-offset-1">
						<div class="login-container">
							<div class="center">
								<h1>
									<i class="icon-leaf green"></i>
									<span class="red">Ace</span>
									<span class="white">Application</span>
								</h1>
								<h4 class="blue">&copy; Company Name</h4>
							</div>

							<div class="space-6"></div>

							<div class="position-relative">
								<div id="login-box" class="login-box visible widget-box no-border">
									<div class="widget-body">
										<div class="widget-main">
											<h4 class="header blue lighter bigger">
												<i class="icon-coffee green"></i>
												请输入登录信息
											</h4>

											<div class="space-6"></div>

											@using(Html.BeginForm()){
												<fieldset>
													<label class="block clearfix">
														<span class="block input-icon input-icon-right">
															 
                                                            @Html.TextBox("username",string.Empty, new { @class="form-control", placeholder="用户名", title="用户名" ,data_val_required = "用户名不能为空", data_val = "true"})
															<i class="icon-user"></i>
														</span>
													</label>

													<label class="block clearfix">
														<span class="block input-icon input-icon-right">
                                                            @Html.Password("password",string.Empty, new { @class="form-control", placeholder="密码", title="密码", data_val_required = "密码不能为空", data_val = "true"})
															<i class="icon-lock"></i>
														</span>
													</label>
                                                    <label class="block clearfix">
														<span class="block input-icon input-icon-right">
															 @Html.TextBox("verifycode","", new { @class="form-control ",style="width: 125px;float: left;margin-left: 0px", placeholder="验证码", title="验证码",data_val_required = "密码不能为空", data_val = "true"})
                    <img src='@Url.Action("VerifyImage","Comm")' width="70" height="22"
                        alt="点击切换验证码" title="点击切换验证码" style="margin-top: 2px; vertical-align: top; cursor: pointer;"
                        onclick="ToggleCode(this, '@Url.Action("VerifyImage","Comm")');return false;">
															<i class="icon-lock"></i>
														</span>
													</label>
													<div class="space"></div>

													<div class="clearfix">
														@*<label class="inline">
															<input type="checkbox" class="ace" />
															<span class="lbl"> Remember Me</span>
														</label>*@

														<button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
															<i class="icon-key"></i>
															Login
														</button>
													</div>

													<div class="space-4"></div>
												</fieldset>
           }

											 
										</div><!-- /widget-main -->

										<div class="toolbar clearfix">
											<div>
												<a href="#" onclick="show_box('forgot-box'); return false;" class="forgot-password-link">
													 
													 
												</a>
											</div>

											<div>
												 
											</div>
										</div>
									</div><!-- /widget-body -->
								</div><!-- /login-box -->

							</div><!-- /position-relative -->
						</div>
					</div><!-- /.col -->
				</div><!-- /.row -->
			</div>
		</div><!-- /.main-container -->

		<!-- basic scripts -->
       

		<script type="text/javascript" src='@Url.StaticFile("~/assets/js/jquery-2.0.3.min.js")'></script>
       
		<script type="text/javascript">
		    if ("ontouchend" in document) document.write("<script src='@Url.StaticFile("~/assets/js/jquery.mobile.custom.min.js")'>" + "<" + "/script>");
		    function ToggleCode(obj, codeurl) {
		        $(obj).attr("src", codeurl + "?time=" + Math.random());
		    }
		</script>

	 
	 
</body>
</html>